{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "lib": ["dom", "esnext"],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "allowSyntheticDefaultImports": true,
  "allowJs": true,
  "esModuleInterop": true,
  "exclude": ["node_modules", "dist", "*.old","**/*.vue"]
}